/* pages/center/record.wxss */

.record-info-list {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* margin: 20rpx 20rpx; */
  position: relative;
  border-bottom: #f3f3f3 1rpx solid;
  padding: 20rpx 20rpx;

}

.record-brand {
  width: 192rpx;
  height: 192rpx;
  border: #a68f3f 2rpx solid;
  display: block;
  margin-right: 10rpx;
}

.brand-name {
  color: #000;
  font-size: 28rpx;
}

.record-info {
  font-size: 24rpx;
  color: #000;
}

.record-info .record-info-name {
  color: #7f7f7f;
}

.record-btn-bg {
  position: absolute;
  bottom:20rpx;
  right:20rpx;
}

.record-btn {
  border: #a68f3f 1rpx solid;
  font-size: 28rpx;
  text-align: center;
  height: 60rpx;
  background: #fff;
  line-height: 60rpx;
  margin: 20rpx auto;
  color: #a68f3f;
}

.record-btn:last-child {
  margin-bottom: 0;
}
