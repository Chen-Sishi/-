/* pages/center/index.wxss */

page {
  background: #f5f5f5;
}

.center-head-bg {
  background: #c6b889;
  width: 750rpx;
  height: 460rpx;
}

.avatar-bg {
  padding-top: 50%;
  transform: translateY(-50%);
}

.user-avatar {
  width: 170rpx;
  height: 170rpx;
  display: block;
  border: #fff 8rpx solid;
  border-radius: 50%;
  margin: 0 auto;
  box-shadow: #999 0 0 20px;
}

.user-name {
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  display: block;
}

.win-menu {
  display: flex;
  align-items: center;
}

.menu1, .menu2, .menu3 {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  width: 250rpx;
  height: 120rpx;
  align-items: center;
}

.menu1 text, .menu2 text, .menu3 text {
  display: block;
}

.menu1 {
  background: #c0b17a;
}

.menu2 {
  background: #b5a260;
}

.menu3 {
  background: #a68f3f;
}

.menu-list-bg {

}

.menu-list {
  background: #fff;
  height: 100rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  line-height: 100rpx;
   padding: 0 20rpx;
}
