/* pages/reservation/reservationTime.wxss */

.banner {
  width: 750rpx;
  height: 240rpx;
  display: block;
}

.time-list-bg {
  width: 100%;
  overflow-x: scroll;
  white-space: nowrap;
}

.time-bg {
  background: #fff;
  position: relative;
  width: 150rpx;
  height: 124rpx;
  display: inline-block;
  margin: 20rpx 10rpx;
}
.time-bg:first-child {
  margin-left:20rpx;
}
.time-bg:last-child {
  margin-right: 20rpx;
}

.time-img {
  width: 150rpx;
  height: 124rpx;
  display: block;
  position: absolute;
}

.reservation_time-bg {
  margin-top: 20rpx;
}

.reservation_time {
  color: #a68f3f;
  font-size: 28rpx;
  display: block;
  text-align: center;
  line-height: 36rpx;
}
.time-list-title {
  font-size: 36rpx;
  color: #000;
  text-align: center;
  display: block;
  margin: 30rpx auto;
}

.reservation-list-title {
  display: flex;
  flex-wrap: wrap;
    border-top: #a68f3f 1rpx solid;
  border-bottom: #a68f3f 1rpx solid;

}
.time-list {
  width: 250rpx;
  height: 160rpx;
  border: #a68f3f 1rpx solid;
  box-sizing: border-box;
  text-align: center;
  line-height: 160rpx;
  font-size: 30rpx;
}
.time-list.on {
  background: #ede9d9;
}

.time-list:nth-child(3n) {
  border-right: none;
}

.time-list:nth-child(3n+1){
  border-left: none;
}
.reservation-btn {
  font-size: 28rpx;
  color: #a68f3f;
  background: #fff;
  border: #a68f3f 1rpx solid;
  border-radius: 10rpx;
  width: 700rpx;
  height: 70rpx;
  line-height:70rpx;
  margin: 50rpx auto;
}




/*预约弹出样式  */
.model-bg {
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.model-form {
  background: #edf2f5;
  width: 665rpx;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
  display: block;
  margin: auto;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.model-input-title {
  font-size: 28rpx;
  color: #000;
  line-height: 40rpx;
  display: block;
}

.category-list{
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: #ddd 1rpx solid;

}
.category {
  width: 120rpx;
  height: 60rpx;
  color: #a68f3f;
  border: #a68f3f 1rpx solid;
  border-radius: 10rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 20rpx 20rpx 20rpx 0;
}

.model-tips {
  font-size: 26rpx;
  color: #7a7a7a;
}


.complete-btn {
  display: block;
  height: 60rpx;
  border: #a68f3f 1rpx solid;
  background: transparent;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  font-size: 28rpx;
  color: #a68f3f;
  line-height: 60rpx;
  margin: 40rpx 0;
  box-sizing: content-box;
}










